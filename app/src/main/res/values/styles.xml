<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="PermissonButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/icons</item>
        <item name="colorControlHighlight">@color/primary_light</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary_dark</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="SecondaryButton" parent="Theme.AppCompat.Light">
        <item name="android:textAllCaps">false</item>
        <item name="colorButtonNormal">@color/accent</item>
        <item name="colorControlHighlight">@color/primary_light</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="SignatureProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">11pt</item>
        <item name="android:windowBackground">@color/icons</item>
    </style>

    <style name="SecondaryImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="colorButtonNormal">@color/accent</item>
        <item name="colorControlHighlight">@color/primary_light</item>
        <item name="android:textColor">@color/icons</item>
    </style>

</resources>
