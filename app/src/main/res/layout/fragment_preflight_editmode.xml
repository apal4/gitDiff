<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:clickable="true"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/toolbarpreflighteditmode"
        layout="@layout/toolbar_preflight_editmode"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_weight="0">

        <ImageButton
            android:layout_height="55dp"
            android:layout_width="55dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:id="@+id/imageButton_moveup"
            android:src="@drawable/ic_action_arrow_top"
            android:visibility="invisible"/>

        <ImageButton
            android:layout_height="55dp"
            android:layout_width="55dp"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@id/imageButton_moveup"
            android:id="@+id/imageButton_movedown"
            android:src="@drawable/ic_action_arrow_bottom"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checklist"
            android:id="@+id/check_text"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:id="@+id/checklistview">

    </android.support.v7.widget.RecyclerView>
    <!--
            <EditText
                android:id="@+id/editText"
                android:inputType="textMultiLine|textFilter"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffcc"
                android:imeOptions="actionDone"
                android:scrollbars="vertical"
                android:textSize="30dp"
                android:gravity="top"/>
    -->
    <ImageButton
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imagebutton_add"
        android:layout_weight="0"
        android:src="@drawable/ic_add_circle_outline"
        android:scaleType="centerCrop"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom|center_horizontal"/>

</LinearLayout>
