<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_showpdf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_permissonitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:contentPaddingLeft="10dp"
        card_view:contentPaddingRight="10dp"
        card_view:contentPaddingTop="5dp"
        card_view:contentPaddingBottom="5dp"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/black"
                android:textSize="11pt"/>

            <TextView
                android:id="@+id/pname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/text_date"
                android:text="Name:"
                android:textSize="11pt"/>

            <TextView
                android:id="@+id/pdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/text_date"
                android:layout_toStartOf="@id/text_date"
                android:text="Date:"
                android:textSize="11pt"/>

            <TextView
                android:id="@+id/paddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pname"
                android:text="Address:"
                android:textSize="11pt"/>



            <TextView
                android:id="@+id/text_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/paddr"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/paddr"
                android:textColor="@android:color/black"
                android:textSize="11pt"/>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/text_addr"
                android:layout_toEndOf="@id/pname"
                android:layout_toStartOf="@id/pdate"
                android:textColor="@android:color/black"
                android:textSize="11pt"/>

            <Button
                android:id="@+id/button_viewpermisson"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginTop="-5dp"
                android:text="View"
                android:textAllCaps="false"
                android:includeFontPadding="false"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/paddr"/>

            <TextView
                android:id="@+id/text_citystate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/text_addr"
                android:layout_toStartOf="@id/button_viewpermisson"
                android:layout_below="@id/paddr"
                android:textColor="@android:color/black"
                android:textSize="11pt"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>